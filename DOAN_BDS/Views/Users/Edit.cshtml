@model DOAN_BDS.Models.User

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<style>
    .btn-main {
        padding: 10px;
        background: #DDDDDD;
        border: none;
        margin-top: 20px;
        margin-bottom: 20px;
        border-radius: 10px;
    }

    .btn-main:hover {
        transform: translateY(-5px);
    }
    .btn-main a {
        text-decoration: none;
        font-size: 16px;

    }
</style>

<h2>Edit</h2>


